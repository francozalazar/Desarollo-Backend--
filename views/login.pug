extends layout

block content
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
        link(rel='stylesheet' href='css/main.css')
        title Socket.IO
    body.bg-dark
        main.container.text-white
            section.row.justify-content-center.mb-4
                h2.text-center.mb-4 Formulario de ingreso
                form#enviarProducto.col-6.d-flex.flex-column.align-items-center.justify-content-center.border.rounded.py-4(action='/login' method='POST')
                    .mb-3
                        label.form-label.text-center.d-block(for='nombre') Nombre
                        input#nombreProducto.w-100.px-4.form-control(required='' type='text' placeholder='Ingrese su nombre...' name='username')
                    input.btn.btn-danger(type='submit' value='Enviar')